# Prevent caching of HTML files - always get fresh content
/*.html
  Cache-Control: no-cache, no-store, must-revalidate

/
  Cache-Control: no-cache, no-store, must-revalidate

# Cache images for 1 week (they don't change often)
/images/*
  Cache-Control: public, max-age=604800

# Cache favicon
/favicon.svg
  Cache-Control: public, max-age=604800
