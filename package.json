{
  "name": "superbowl-predictions",
  "version": "1.0.0",
  "description": "Super Bowl prediction game with real-time leaderboard",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "yarn run test && yarn run test:e2e",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "check:unused": "knip",
    "validate": "yarn run lint && yarn run format:check && yarn run type-check && yarn run test",
    "validate:build": "npx tsx scripts/validate-build.ts",
    "build:validate": "yarn run build && yarn run validate:build",
    "netlify:dev": "npx netlify dev",
    "prepare": "husky",
    "db:check": "tsx scripts/schema-check.ts",
    "db:verify": "tsx scripts/verify-data.ts",
    "db:verify-app-id": "tsx scripts/verify-app-id.ts",
    "db:export": "tsx scripts/export-data.ts",
    "db:push": "tsx scripts/push-schema.ts",
    "db:push-safe": "yarn db:check && yarn db:push",
    "db:push-prod-safe": "yarn db:check && yarn db:export && yarn db:push",
    "seed-game": "tsx scripts/seed-game.ts"
  },
  "keywords": [
    "superbowl",
    "predictions",
    "game",
    "instantdb"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.58.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-prettier": "^5.5.5",
    "happy-dom": "^20.4.0",
    "husky": "^9.1.7",
    "instant-cli": "^0.22.121",
    "knip": "^5.82.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsx": "^4.19.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@instantdb/core": "^0.22.119",
    "@instantdb/react": "^0.22.121",
    "canvas-confetti": "^1.9.4",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings 0 --no-warn-ignored",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write"
    ]
  }
}
